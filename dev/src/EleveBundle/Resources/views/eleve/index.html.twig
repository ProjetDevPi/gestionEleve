    <th>Detail</th>
</tr>
</thead>
<tbody>
{% for eleve in eleves %}
    <tr>
        <td><a href="{{ path('eleve_show', { 'id': eleve.id }) }}">{{ eleve.id }}</a></td>
        <td>{{ eleve.nom }}</td>
        <td>{% if eleve.datenaissance %}{{ eleve.datenaissance|date('Y-m-d') }}{% endif %}</td>
        <td>{{ eleve.prenom }}</td>
        <td>{{ eleve.niveau }}</td>
        <td>{{ eleve.age }}</td>
        <td>{{ eleve.adresse }}</td>
        <td>{{ eleve.nbreAbsence }}</td>

        <td>
            <a href="{{ path('eleve_edit', { 'id': eleve.id }) }}" class="btn btn-grd-danger" >Absence</a>

        </td>
        <td>
            <a href="{{ path('eleve_show', { 'id': eleve.id }) }}" class="btn btn-grd-success" > Affecter Classe</a>

        </td>
        <td>
            <a href="{{ path('eleve_show', { 'id': eleve.id }) }}" class="btn btn-grd-info" >Detail</a>

        </td>
    </tr>
{% endfor %}


