{% extends 'base_admin.html.twig' %}
{% block container %}

        <div class="pcoded-content">
            <div class="pcoded-inner-content">

                <div class="main-body">
                    <div class="page-wrapper">

                        <div class="page-header">
                            <div class="row align-items-end">
                                <div class="col-lg-8">
                                    <div class="page-header-title">
                                        <div class="d-inline">

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="card">
                                        <div class="card-header">

                                        </div>
                                        <div class="card-block">
                                            <h4 class="sub-title">Basic Inputs</h4>

                                            {{ form_start(edit_form, {'method': 'post', 'action': path('classe_edit', { 'id': classe.id })  }) }}
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(edit_form.nomClasse,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nom classe','required' :'1'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(edit_form.capacite,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'capacite','required' :'1'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(edit_form.salle,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'salle','required' :'1'} }) }}
                                                </div>
                                            </div>


                                            <button type="submit" class="btn btn-danger" value="Edit" />Editer</button>

                                            {{ form_end(edit_form) }}

                                            <ul>
                                                <li>
                                                    <a href="{{ path('classe_index') }}">Back to the list</a>
                                                </li>

                                            </ul>

                                        </div>
                                    </div>
                                </div>



                                <div id="styleSelector">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




{% endblock %}