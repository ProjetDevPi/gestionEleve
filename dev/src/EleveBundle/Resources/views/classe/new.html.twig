{% extends 'base_admin.html.twig' %}

{% block container %}


    <div class="pcoded-content" xmlns="http://www.w3.org/1999/html">
            <div class="pcoded-inner-content">

                <div class="main-body">
                    <div class="page-wrapper">

                        <div class="page-header">
                            <div class="row align-items-end">
                                <div class="col-lg-8">
                                    <div class="page-header-title">
                                        <div class="d-inline">

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="card">
                                        <div class="card-header">

                                        </div>
                                        <div class="card-block">
                                            <h4 class="sub-title">Basic Inputs</h4>

                                            {{ form_start(form, {'method': 'post', 'action': path('classe_new') }) }}
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(form.nomClasse,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Nom du Classe','required' :'1'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(form.capacite,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Capacite du classe','required' :'1'} }) }}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-10">
                                                    {{ form_row(form.salle,{ 'attr': {'class': 'form-control form-control-warning','placeholder': 'salle','required' :'1'} }) }}
                                                </div>
                                            </div>


                                            <button type="submit" class="btn btn-danger" value="Create" />Ajouter</button>

                                            {{ form_end(form) }}



                                        </div>
                                    </div>
                                </div>



                                <div id="styleSelector">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>





{% endblock container %}




