{% extends 'base_admin.html.twig' %}

{% block container %}
    <div class="pcoded-content">
        <div class="pcoded-inner-content">

            <div class="main-body">
                <div class="page-wrapper">

                    <div class="page-header">
                        <div class="row align-items-end">
                            <div class="col-lg-8">
                                <div class="page-header-title">
                                    <div class="d-inline">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="page-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="card">
                                    <div class="card-header">

                                    </div>
                                    <div class="card-block">
                                        <h4 class="sub-title">Editer Carnet</h4>

                                        {{ form_start(edit_form, {'method': 'post', 'action': path('carnet_edit', { 'id': carnet.id })  }) }}
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(edit_form.note,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Note','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(edit_form.appreciation,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'appreciation','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(edit_form.semestre,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'semestre','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(edit_form.date,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'date','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(edit_form.eleve,{ 'attr': {'class': 'form-control form-control-danger','placeholder': 'éléve','required' :'1'} }) }}
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-danger" value="Edit" />Editer</button>

                                        {{ form_end(edit_form) }}

                                        <ul>
                                            <li>
                                                <a href="{{ path('carnet_index') }}">Back to the list</a>
                                            </li>

                                        </ul>

                                    </div>
                                </div>
                            </div>



                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h1>Carnet edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('carnet_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
