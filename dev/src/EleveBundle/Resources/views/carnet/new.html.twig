{% extends 'base_admin.html.twig' %}

{% block container %}

    <div class="pcoded-content" xmlns="http://www.w3.org/1999/html">
        <div class="pcoded-inner-content">

            <div class="main-body">
                <div class="page-wrapper">

                    <div class="page-header">
                        <div class="row align-items-end">
                            <div class="col-lg-8">
                                <div class="page-header-title">
                                    <div class="d-inline">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="page-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="card">
                                    <div class="card-header">

                                    </div>
                                    <div class="card-block">
                                        <h4 class="sub-title">Basic Inputs</h4>

                                        {{ form_start(form, {'method': 'post', 'action': path('carnet_new') }) }}
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.note,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'note','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.appreciation,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'apreciation','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.semestre,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'semestre','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.date,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Date Du creation','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.eleve,{ 'attr': {'class': 'form-control form-control-info','placeholder': 'Nom éléve','required' :'1'} }) }}
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-danger" value="Create" />Ajouter</button>

                                        {{ form_end(form) }}



                                    </div>
                                </div>
                            </div>



                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





{% endblock %}
